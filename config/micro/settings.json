{
    "autoclose": true,
    "autoindent": true,
    "autos": false,
    "autosu": true,
    "backup": true,
    "backupdir": "~/.config/micro/backups",
    "basename": false,
    "colorcolumn": 80,
    "colorscheme": "gruvbox",
    "cursorline": true,
    "eofnewline": true,
    "fastdirty": true,
    "fileformat": "unix",
    "filetype": "unknown",
    "hlsearch": true,
    "ignorecase": false,
    "incsearch": true,
    "indentchar": " ",
    "infobar": true,
    "keepautoindent": false,
    "keymenu": false,
    "ltabstop": 4,
    "matchbrace": true,
    "matchbraceleft": true,
    "matchbracestrict": false,
    "mouse": true,
    "permbackup": false,
    "readonly": false,
    "relativeruler": false,
    "rmtrailingws": true,
    "ruler": true,
    "savecursor": true,
    "savehistory": true,
    "saveundo": true,
    "scrollmargin": 3,
    "scrollspeed": 2,
    "smartpaste": true,
    "softwrap": false,
    "splitBottom": true,
    "splitRight": true,
    "splitTabs": false,
    "status": true,
    "statusformatl": "$(filename) $(modified)($(line),$(col)) $(status.paste)| ft:$(opt:filetype) | $(opt:fileformat) | $(opt:encoding)",
    "statusformatr": "$(bind:ToggleKeyMenu): bindings, $(bind:ToggleHelp): help",
    "stickyanchor": false,
    "tabmovement": false,
    "tabsize": 4,
    "tabstospaces": true,
    "tocloselasttab": false,
    "trimcalc": false,
    "useprimary": true,
    "wordwrap": false,
    "xterm": false
}